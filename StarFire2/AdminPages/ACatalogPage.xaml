        <Label x:Name="PrProd4" Style="{DynamicResource ResourceKey=StyleLab}" FontSize="24" Content="1500" Foreground="#7a7a7a"  HorizontalAlignment="Left" Margin="876,348,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

    </Grid>
</Page>
