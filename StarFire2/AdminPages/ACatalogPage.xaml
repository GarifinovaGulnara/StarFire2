        <ComboBox x:Name="ListProdCB" HorizontalAlignment="Left" Margin="1200,300,0,0" VerticalAlignment="Top" Width="200" Height="60"/>
        <Button x:Name="RightArrowBtn" Style="{DynamicResource StyleBtn}" HorizontalAlignment="Left" Margin="1330,41,0,0" VerticalAlignment="Top" Width="48" Height="42" Click="RightArrowBtn_Click">
