        <Image x:Name="img4" Style="{DynamicResource ImageStyle}" HorizontalAlignment="Left" Height="150" Margin="680,236,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="Des1" BorderBrush="White" Text="Описание" TextWrapping="Wrap" IsEnabled="False" FontSize="18" HorizontalAlignment="Left" Margin="302,89,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" Height="64" Width="290"/>
        <Label Content="Номер товара" FontSize="20" HorizontalAlignment="Left" Margin="302,47,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" FontWeight="Bold"/>
        <Label x:Name="NumberOrderLab1" Content="..." FontSize="20" HorizontalAlignment="Left" Margin="467,47,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" FontWeight="Bold"/>
        <TextBox x:Name="Des2" BorderBrush="White" Text="Описание" TextWrapping="Wrap" IsEnabled="False" FontSize="18" HorizontalAlignment="Left" Margin="302,279,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" Height="69" Width="290"/>
        <Label Content="Номер товарa" FontSize="20" HorizontalAlignment="Left" Margin="302,237,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" FontWeight="Bold"/>
        <Label x:Name="NumberOrderLab2" Content="..." FontSize="20" HorizontalAlignment="Left" Margin="467,237,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" FontWeight="Bold"/>
        <TextBox x:Name="Des3" BorderBrush="White" Text="Описание" TextWrapping="Wrap" IsEnabled="False" FontSize="18" HorizontalAlignment="Left" Margin="875,87,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" Height="66" Width="290"/>
        <Label Content="Номер товарa" FontSize="20" HorizontalAlignment="Left" Margin="876,45,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" FontWeight="Bold"/>
        <Label x:Name="NumberOrderLab3" Content="..." FontSize="20" HorizontalAlignment="Left" Margin="1041,45,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" FontWeight="Bold"/>
        <TextBox x:Name="Des4" BorderBrush="White" Text="Описание" TextWrapping="Wrap" IsEnabled="False" FontSize="18" HorizontalAlignment="Left" Margin="875,283,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" Height="65" Width="290"/>
        <Label Content="Номер товара" FontSize="20" HorizontalAlignment="Left" Margin="876,241,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" FontWeight="Bold"/>
        <Label x:Name="NumberOrderLab4" Content="..." FontSize="20" HorizontalAlignment="Left" Margin="1041,241,0,0" VerticalAlignment="Top" Foreground="#FF7A7A7A" FontWeight="Bold"/>
        <Label x:Name="PrProd1" Style="{DynamicResource StyleLab}" FontSize="24" Content="1500" Foreground="#7a7a7a"  HorizontalAlignment="Left" Margin="302,153,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="PrProd2" Style="{DynamicResource ResourceKey=StyleLab}" FontSize="24" Content="1500" Foreground="#7a7a7a"  HorizontalAlignment="Left" Margin="302,348,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
